		<static-path url="/cvb/static" localFolder="static"/>
		<static-path url="/cvb/resources" localFolder="resources"/>
	</static-paths>
	<content-types>
		<content-type>
			<title>CVB</title>
			<description>Community VFS Browser</description>
			<company name="" url="" logo="@PLUGIN_COMPANY_LOGO@"></company>
