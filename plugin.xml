	</content-types>
	<content-generator
		id="cvb"
		title="CVB"
		type="cvb"
		class="pt.webdetails.cpk.CpkContentGenerator"/>
	<!-- Menu entry -->
	<menu-items>
		<menu-item id="cvb_main" anchor="tools-submenu" label="CVB" command="content/cvb/" type="MENU_ITEM" how="LAST_CHILD"/>
